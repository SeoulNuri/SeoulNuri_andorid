<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hello.seoulnuri.view.course.CourseMapActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="506dp">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/tour_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:context="com.hello.seoulnuri.view.course.CourseMapActivity" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/tour_item_map_img"
            android:layout_width="80dp"
            android:layout_height="94dp"
            android:src="@drawable/img_gyeonbok_planner" />

        <TextView
            android:id="@+id/tour_item_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tour_item_map_img"
            android:letterSpacing="-0.01"
            android:textColor="#212121"
            android:textSize="16sp"
            tools:text="경복궁" />

        <TextView
            android:id="@+id/tour_item_map_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tour_item_map_title"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tour_item_map_img"
            android:letterSpacing="-0.01"
            android:textColor="#9e9e9e"
            android:textSize="12sp"
            tools:text="서울 종로구 사직로 161 경복궁" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/tour_item_map_rating_star"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tour_item_map_addr"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/tour_item_map_img"
            android:numStars="5"
            android:rating="4.4"
            android:theme="@style/custom_rating_bar" />

        <TextView
            android:id="@+id/tour_item_map_rating_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tour_item_map_addr"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tour_item_map_rating_star"
            android:letterSpacing="-0.01"
            android:textColor="#9e9e9e"
            android:textSize="12sp"
            tools:text="(21)" />

        <ImageView
            android:id="@+id/show_tour_tour_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tour_item_map_rating_star"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tour_item_map_img"
            android:src="@drawable/button_detail_spot" />


    </RelativeLayout>

</LinearLayout>