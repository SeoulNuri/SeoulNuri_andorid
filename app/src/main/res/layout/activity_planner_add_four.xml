<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".view.planner.PlannerAddFourActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="131dp"
        android:gravity="center_horizontal"
        android:text="나만의 플래너를 만들었어요!"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="완성한 플래너는 리스트에서 다시 확인할 수 있어요."
        android:textColor="#ffffff"
        android:textSize="13sp" />


    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="57dp"
        android:background="@drawable/card_planner_size">

        <ImageView
            android:id="@+id/planner_logo_icon"
            android:layout_width="76dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_planner_done" />


        <TextView
            android:id="@+id/planner_four_travel_start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/planner_logo_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="29dp"
            android:letterSpacing="-0.01"
            android:text="여행 시작 날짜"
            android:textColor="#212121"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/planner_four_travel_start_text"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/planner_add_four_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                android:text="08월"
                android:textColor="@color/pinkish_orange"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/planner_add_four_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                android:text=""
                android:textColor="@color/pinkish_orange"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/planner_add_four_period_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/planner_four_travel_start_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="46dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                android:text="첫 여행지"
                android:textColor="#aeaeae"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="126dp"
                android:letterSpacing="-0.01"
                android:text="마지막 여행지"
                android:textColor="#aeaeae"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/planner_add_four_location_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/planner_add_four_period_layout"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/planner_add_four_start_location"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                android:text="경복궁"
                android:textColor="#212121"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/planner_add_four_start_location"
                android:src="@drawable/ic_walkingman" />

            <TextView
                android:id="@+id/planner_add_four_end_location"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="start"
                android:letterSpacing="-0.01"
                android:text="갤러리룩스"
                android:textColor="#212121"
                android:textSize="24sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/planner_add_four_time_layout"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/planner_add_four_location_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                android:text="총 소요시간"
                android:textColor="#212121"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/planner_add_four_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:gravity="end"
                android:letterSpacing="-0.01"
                android:text="38분"
                android:textColor="#757575"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/planner_add_four_dot"
            android:layout_width="296dp"
            android:layout_height="5dp"
            android:layout_below="@+id/planner_add_four_time_layout"
            android:layout_centerHorizontal="true"

            android:layerType="software"
            android:src="@drawable/dot" />

        <RelativeLayout
            android:id="@+id/planner_add_four_finish_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/planner_add_four_dot">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="확인"
                android:textColor="@color/pinkish_orange"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>