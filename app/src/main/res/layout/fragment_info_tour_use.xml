<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7f7f7"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="28dp">

                <TextView
                    android:id="@+id/use_method_text"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:text="이용안내"
                    android:textStyle="bold"
                    android:textColor="@color/pinkish_orange"
                    android:textSize="11sp" />

                <LinearLayout
                    android:id="@+id/use_breakTime_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/use_method_text"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:text="이용 시간"
                        android:textColor="#212121"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/info_tour_use_time"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:lineSpacingExtra="8sp"
                        tools:text="11~2월 | 09:00 - 17:00 \n3~5월・9~10월 | 09:00 - 18:00 \n6~8월 | 09:00 - 18:30"
                        android:textColor="#212121"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/use_holiday_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/use_breakTime_layout"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/use_method_text"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:text="쉬는 날"
                        android:textColor="#212121"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/info_tour_use_holiday"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:lineSpacingExtra="8sp"
                        tools:text="매주 화요일"
                        android:textColor="#212121"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/use_fee_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/use_holiday_layout"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/use_method_text"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:text="입장료"
                        android:textColor="#212121"

                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/info_tour_use_fee"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:lineSpacingExtra="8sp"
                        android:text=""
                        android:textColor="#212121"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/use_extra_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/use_fee_layout"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/use_method_text"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#212121"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/info_tour_fee_additional"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:lineSpacingExtra="8sp"
                        android:text=""
                        android:textColor="#9e9e9e"
                        android:textSize="10sp" />
                </LinearLayout>

                <View
                    android:id="@+id/border_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/use_extra_layout"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/use_parking_all_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border_one"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id="@+id/use_parking_text"
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:text="주차"
                        android:textStyle="bold"
                        android:textColor="@color/pinkish_orange"
                        android:textSize="11sp" />


                    <LinearLayout
                        android:id="@+id/use_parking_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/use_parking_text"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:text="주차시설"
                            android:textColor="#212121"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/info_tour_use_parkingSpace"
                            android:layout_width="192dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"
                            android:lineSpacingExtra="8sp"
                            android:text=""
                            android:textColor="#212121"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/use_parking_layout"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/use_parking_text"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="wrap_content"
                            android:text="주차 요금"
                            android:textColor="#212121"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/info_tour_use_parking_fee"
                            android:layout_width="192dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:lineSpacingExtra="8sp"
                            tools:text="월, 수, 목요일"
                            android:textColor="#212121"
                            android:textSize="13sp" />
                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:id="@+id/border_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/use_parking_all_layout"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/use_guide_all_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border_two"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id="@+id/use_guide_text"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:text="안내"
                        android:textStyle="bold"
                        android:textColor="@color/pinkish_orange"
                        android:textSize="11sp" />


                    <LinearLayout
                        android:id="@+id/use_guide_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/use_guide_text"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:text="예약 안내"
                            android:textColor="#212121"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/info_use_tour_book"
                            android:layout_width="192dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"
                            android:lineSpacingExtra="8sp"
                            tools:text="있음"
                            android:textColor="#212121"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/use_guide_layout"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/use_guide_text"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="wrap_content"
                            android:text="안내 서비스"
                            android:textColor="#212121"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/info_use_tour_service"
                            android:layout_width="192dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:lineSpacingExtra="8sp"
                            android:text=""
                            android:textColor="#212121"
                            android:textSize="13sp" />
                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:id="@+id/border_three"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/use_guide_all_layout"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/border_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/use_toilet_text"
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="화장실"
                        android:textStyle="bold"
                        android:textColor="@color/pinkish_orange"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_toRightOf="@+id/use_toilet_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="30dp">

                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="11sp"
                            android:textColor="#212121"
                            android:text="화장실 위치"
                            />

                        <TextView
                            android:id="@+id/info_tour_toilet_location"
                            android:layout_marginLeft="12dp"
                            android:layout_width="192dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#212121"
                            android:lineSpacingExtra="8sp"
                            tools:text="경회루, 곡수지, 태원전,사무실옆, 주차장"
                            />



                    </LinearLayout>



                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>