<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".view.search.Search2Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        android:elevation="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/searchBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_backarrow" />

        <EditText
            android:id="@+id/searchContentEditText"
            android:layout_width="wrap_content"
            android:imeOptions="actionDone"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:hint="여행하고 싶은 관광지를 선택하세요"
            android:inputType="text"
            android:textColorHint="#bdbdbd"
            android:textSize="18sp" />




        <ImageButton
            android:id="@+id/searchCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_cancel"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/searchBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:letterSpacing="-0.01"
            android:text="검색"
            android:textColor="@color/pinkish_orange"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/searchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:letterSpacing="-0.01"
        android:text="즐겨찾기"
        android:textColor="@color/pinkish_orange"
        android:textSize="13sp" />



    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="6dp"
        android:id="@+id/searchRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>