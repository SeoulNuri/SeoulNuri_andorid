<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".view.login.LoginCategoryActivity">

    <TextView
        android:id="@+id/change_type_text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="24dp"
        android:textSize="22sp"
        android:textColor="#212121"
        android:letterSpacing="-0.01"
        android:text="회원님의"
        />

    <TextView
        android:id="@+id/change_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_type_text_user"
        android:layout_marginLeft="24dp"
        android:letterSpacing="-0.01"
        android:text="장애 유형을 변경해주세요."
        android:textColor="#212121"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/change_type_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_type_text"
        android:layout_marginTop="56dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/change_type_sub_lay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="84dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/change_type_button_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_eye"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:letterSpacing="-0.01"
                android:text="시각"
                android:textColor="#212121"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_toRightOf="@+id/change_type_sub_lay1"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/change_type_button_wheel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_wheel"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:letterSpacing="-0.01"
                android:text="지체"
                android:textColor="#212121"
                android:textSize="16sp" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_type_lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_type_lay1"
        android:layout_marginTop="32dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/change_type_sub_lay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="84dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/change_type_button_ear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_ear"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:letterSpacing="-0.01"
                android:text="청각"
                android:textColor="#212121"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_toRightOf="@id/change_type_sub_lay2"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/change_type_button_elder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_elder"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:letterSpacing="-0.01"
                android:text="지체"
                android:textColor="#212121"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:letterSpacing="-0.01"
                android:text="만 65세 이상"
                android:textColor="#212121"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/change_type_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:onClick="startClick"
        android:src="@drawable/change_button_start_selector" />


</RelativeLayout>